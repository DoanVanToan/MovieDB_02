<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="company"
            type="com.example.hcm_102_0006.android_project_m.data.model.MovieDetail.Company"/>
        <variable
            name="viewModel"
            type="com.example.hcm_102_0006.android_project_m.ui.moviedetail.MovieDetailViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/marginBetween2Item">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="@{()->viewModel.onResultCompany(company)}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{company.name}"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>