<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movieDetailBinding"
            type="com.example.hcm_102_0006.android_project_m.remote.model.MovieDetail" />

        <variable
            name="movieDatabaseBinding"
            type="com.example.hcm_102_0006.android_project_m.view.ui.MovieDetailActivity" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.example.hcm_102_0006.android_project_m.view.ui.MovieDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imageUrl="@{movieDetailBinding.getPosterPath}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{movieDetailBinding.getOriginalTitle}"
                android:textSize="@dimen/sizeTextHeader"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(movieDetailBinding.getVoteAverage)}"/>

                <com.github.ivbaranov.mfb.MaterialFavoriteButton
                    android:id="@+id/btn_SaveOrDeleteFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#6986fa"
                    android:onClick="@{movieDatabaseBinding::saveOrDeleteMovieFavorite}"
                    app:mfb_color="black"
                    app:mfb_type="heart" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{movieDetailBinding.getAllGenres}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actor : Banaka, Oheah ... " />

            <TextView
                android:id="@+id/text_ShowProductProduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{movieDetailBinding.getAllProduction}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{movieDetailBinding.overview}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_trailer"
                android:textSize="@dimen/sizeTextHeader2"
                android:textStyle="bold" />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youTube_show_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </ScrollView>
</layout>