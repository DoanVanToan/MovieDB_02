<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.hcm_102_0006.android_project_m.utils.DataBindingUtils" />

        <import type="android.view.View" />

        <variable
            name="movie"
            type="com.example.hcm_102_0006.android_project_m.data.model.Movie" />
        <variable
            name="viewModel"
            type="com.example.hcm_102_0006.android_project_m.ui.main.MainViewModel"/>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewModel.onClickMovieDetail(movie)}"
        android:orientation="vertical"
        android:padding="@dimen/marginBetween2Item">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:imageUrl="@{movie.getPosterPath}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="@{movie.getTitle}"
                    android:textSize="@dimen/sizeTextHeader"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(movie.getVoteAverage)}"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/sizeTextHeader2" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>